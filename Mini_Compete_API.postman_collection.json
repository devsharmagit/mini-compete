{
  "info": {
    "name": "Mini Compete API",
    "description": "Complete API collection for Mini Compete competitions service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "competitionId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "idempotencyKey",
      "value": "unique-key-{{$randomUUID}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup - Organizer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Organizer\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"ORGANIZER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Signup - Participant",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Participant\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"PARTICIPANT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Competitions",
      "item": [
        {
          "name": "Create Competition",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('competitionId', response.id);",
                  "    console.log('Competition ID saved:', response.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Coding Challenge 2025\",\n  \"description\": \"Test your coding skills in this annual competition. Solve algorithmic problems and compete with developers worldwide.\",\n  \"tags\": [\"coding\", \"algorithms\", \"competitive\"],\n  \"capacity\": 50,\n  \"regDeadline\": \"2025-02-15T23:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/competitions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions"]
            }
          }
        },
        {
          "name": "Get All Competitions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/competitions?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Competitions by Tags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/competitions?tags=coding,algorithms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions"],
              "query": [
                {
                  "key": "tags",
                  "value": "coding,algorithms"
                }
              ]
            }
          }
        },
        {
          "name": "Get Competition by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/{{competitionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "{{competitionId}}"]
            }
          }
        },
        {
          "name": "Register for Competition",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    console.log('Registration successful!');",
                  "    const response = pm.response.json();",
                  "    console.log('Registration ID:', response.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "{{idempotencyKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/{{competitionId}}/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "{{competitionId}}", "register"]
            }
          }
        },
        {
          "name": "Register for Competition (Duplicate - Test Idempotency)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "{{idempotencyKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/{{competitionId}}/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "{{competitionId}}", "register"]
            }
          }
        },
        {
          "name": "Get Competition Registrations (Organizer Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/{{competitionId}}/registrations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "{{competitionId}}", "registrations"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get My Registrations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/me/registrations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me", "registrations"]
            }
          }
        },
        {
          "name": "Get My Mailbox",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/me/mailbox",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me", "mailbox"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Testing",
      "item": [
        {
          "name": "Register for Full Competition",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/1/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "1", "register"]
            }
          }
        },
        {
          "name": "Register After Deadline",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/2/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "2", "register"]
            }
          }
        },
        {
          "name": "Create Competition (Participant Role)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Competition\",\n  \"description\": \"This should fail\",\n  \"capacity\": 10,\n  \"regDeadline\": \"2025-12-31T23:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/competitions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions"]
            }
          }
        }
      ]
    },
    {
      "name": "Load Testing",
      "item": [
        {
          "name": "Concurrent Registration Test",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "load-test-{{$randomUUID}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/competitions/{{competitionId}}/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "competitions", "{{competitionId}}", "register"]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate idempotency key if not set",
          "if (!pm.collectionVariables.get('idempotencyKey')) {",
          "    pm.collectionVariables.set('idempotencyKey', 'test-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9));",
          "}"
        ]
      }
    }
  ]
}
